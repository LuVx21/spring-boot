<?xml version="1.0" encoding="UTF-8"?>
<definitions
        xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
        xmlns:flowable="http://flowable.org/bpmn"
        targetNamespace="Examples">

    <process id="oneTaskProcess" name="The One Task Process">
        <documentation>单任务流程</documentation>
        <extensionElements>
            <flowable:eventListener class="org.luvx.boot.flowable.listener.MyEventListener"/>
        </extensionElements>
        <startEvent id="theStart"/>
        <sequenceFlow id="flow1" sourceRef="theStart" targetRef="theTask"/>
        <userTask id="theTask" name="my task" flowable:assignee="zhangsan">
            <extensionElements>
                <flowable:taskListener event="create" class="org.luvx.boot.flowable.listener.MyTaskListener"/>
            </extensionElements>
        </userTask>
        <sequenceFlow id="flow2" sourceRef="theTask" targetRef="theEnd"/>
        <endEvent id="theEnd"/>
    </process>

</definitions>