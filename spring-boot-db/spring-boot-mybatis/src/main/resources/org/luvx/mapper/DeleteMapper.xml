<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.luvx.mapper.DeleteMapper">
    <resultMap id="BaseResultMap" type="org.luvx.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="age" property="age" javaType="INT"/>
    </resultMap>

    <sql id="Base_Column_List">
      id, user_name, password, age
    </sql>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from user
        where id = #{id}
    </delete>

    <delete id="deleteSelective" parameterType="org.luvx.entity.User">
        delete from user
        <where>
            <if test="record.id != null">
                and id = #{record.id}
            </if>
            <if test="record.userName != null">
                and user_name = #{record.userName}
            </if>
            <if test="record.password != null">
                and password= #{record.password}
            </if>
            <if test="record.age != null">
                and age = #{record.age}
            </if>
        </where>
    </delete>

    <delete id="deleteByPrimaryKeyList">
        delete from user
        <where>
            <foreach open="id in (" collection="ids" item="id" separator="," close=");">
                #{id}
            </foreach>
        </where>
    </delete>

    <delete id="deleteSelectiveList">
        delete from user
        <where>
            <foreach open="" collection="records" item="item" separator="or" close="">
                (true
                <if test="item.id != null">
                    and id = #{item.id}
                </if>
                <if test="item.userName != null">
                    and user_name = #{item.userName}
                </if>
                <if test="item.password != null">
                    and password= #{item.password}
                </if>
                <if test="item.age != null">
                    and age = #{item.age}
                </if>
                )
            </foreach>
        </where>
    </delete>
</mapper>